---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
}

const { title, description, ogImage, ogType, frontmatter } = Astro.props;
const resolvedTitle = title ?? frontmatter?.title ?? '';
const resolvedDescription = description ?? frontmatter?.description ?? '';
---

<BaseLayout title={resolvedTitle} description={resolvedDescription} ogImage={ogImage} ogType={ogType}>
  <Header slot="header" />

  <div class="container-custom py-8">
    <slot />
  </div>

  <Footer slot="footer" />
</BaseLayout>

---
import type { DDL } from '../../types/seduta';
import { formatDateShort } from '../../lib/utils';

interface Props {
  ddl: DDL;
}

const { ddl } = Astro.props;
---

<article class="card group hover:border-l-navy-800 transition-all duration-300">
  <div class="p-6 pb-4">
    <!-- Header con titolo DDL -->
    <div class="mb-4">
      <div class="flex items-start justify-between gap-4 mb-3">
        <div class="flex-1">
          <h2 class="text-2xl md:text-3xl font-display font-bold text-navy-800 mb-2 leading-tight">
            <a
              href={ddl.urlDisegno}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-amber-600 focus:outline-none focus:ring-2 focus:ring-amber-600 rounded-sm transition-colors duration-200 inline-flex items-center gap-2"
            >
              DDL n. {ddl.numero}
              <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </h2>
          <div class="inline-flex items-center gap-2 text-sm text-warm-600 font-medium">
            <span class="px-2 py-0.5 bg-navy-100 text-navy-800 rounded">
              Legislatura {ddl.legislatura}
            </span>
            <span class="text-warm-400">•</span>
            <span class="inline-flex items-center gap-1.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {ddl.sedute.length} sedute
            </span>
          </div>
        </div>
      </div>

      <!-- Titolo DDL -->
      <p class="text-base text-warm-700 leading-relaxed line-clamp-3">
        {ddl.titolo}
      </p>
    </div>

    <!-- Sedute collegate -->
    <div class="pt-3 border-t border-warm-200">
      <p class="text-sm text-warm-600 font-medium mb-2">
        Sedute in cui è stato discusso:
      </p>
      <div class="flex flex-wrap gap-2">
        {ddl.sedute.map((s) => (
          <a
            href={`/ars_sicilia/sedute/${s.yearMonthDay.year}/${s.yearMonthDay.month}/${s.yearMonthDay.day}/${s.slug}`}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-semibold text-navy-800 bg-navy-50 hover:bg-navy-100 border border-navy-200 rounded-md transition-colors duration-200"
          >
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>Seduta {s.numero}</span>
            <span class="text-warm-500">{formatDateShort(s.dataSeduta)}</span>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Footer con call-to-action -->
  <div class="bg-warm-50 border-t border-warm-200 px-6 py-3">
    <a
      href={ddl.urlDisegno}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 text-sm font-semibold text-navy-800 hover:text-amber-600 transition-colors duration-200 group-hover:gap-3"
    >
      Vedi scheda ICARO
      <svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
    </a>
  </div>
</article>

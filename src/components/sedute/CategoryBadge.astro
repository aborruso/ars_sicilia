---
import { slugify } from '../../lib/utils';

interface Props {
  category: string;
  clickable?: boolean;
}

const { category, clickable = true } = Astro.props;
const slug = slugify(category);
const categoryUrl = `/ars_sicilia/sedute/categoria/${slug}`;
---

{clickable ? (
  <a
    href={categoryUrl}
    class="inline-block px-3 py-1 bg-purple-100 text-purple-800 text-sm rounded-full hover:bg-purple-200 transition-colors"
  >
    {category}
  </a>
) : (
  <span class="inline-block px-3 py-1 bg-purple-100 text-purple-800 text-sm rounded-full">
    {category}
  </span>
)}

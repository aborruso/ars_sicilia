---
import type { DisegnoLegge } from '../../types/seduta';

interface Props {
  disegni: DisegnoLegge[];
}

const { disegni } = Astro.props;
---

{disegni.length > 0 && (
  <section class="mb-8">
    <h2 class="text-xl font-bold mb-4">Disegni di legge in ordine del giorno</h2>

    <ul class="space-y-3">
      {disegni.map((disegno) => (
        <li class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900 mb-1">
                {disegno.titolo}
              </h3>
              <p class="text-sm text-gray-600">
                Disegno n. {disegno.numero} Â· Legislatura {disegno.legislatura}
              </p>
            </div>
            <a
              href={disegno.urlDisegno}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary text-sm flex-shrink-0"
            >
              Leggi il testo
              <span class="sr-only">(apre in una nuova finestra)</span>
            </a>
          </div>
        </li>
      ))}
    </ul>
  </section>
)}
